import java.util.Scanner;
import java.text.DecimalFormat; 

public class Main
{
	public static void main(String[] args) {
	    
	    //variaveis
	    
	    Scanner teclado = new Scanner(System.in);
	    DecimalFormat df = new DecimalFormat("#.00");
	   
	    
	    double  real, dolar,euro, cotacaodol, cotacaoeur = 0;
	    
	    
	    //entradas
	    System.out.println("----------Calculadora monetaria ------------- ");
	     System.out.println("Digite o valor do real que deseja converter: ");
	   real= teclado.nextDouble ();
	   System.out.println("Digite a cotacao do dolar: ");
	   cotacaodol= teclado.nextDouble ();
	    System.out.println("Digite a cotacao do euro: ");
	  cotacaoeur= teclado.nextDouble ();
	   
	    //processamento
	    
	    dolar = (real * cotacaodol);
	    euro = (real * cotacaoeur) ;
	    
	    
	    
	    
	    
	    //saidas
	    
		System.out.println ("O valor total de dolares e de : " + df.format ( dolar) + (" dolares"));
		System.out.println ("O valor total de Euros e de : " + df.format ( euro) + (" euros"));
			
			
	   }
	
	}
